# Rise-Task Backend Environment Configuration
# Copy this file to .env and update the values for your environment

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=3000
NODE_ENV=development

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# MongoDB connection string
# Format: mongodb://username:password@host:port/database
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/database
MONGODB_URI=mongodb://localhost:27017/RiseTaskDB

# Database options
DB_MAX_POOL_SIZE=10
DB_SERVER_SELECTION_TIMEOUT=5000
DB_SOCKET_TIMEOUT=45000

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# JWT Secret - Use a strong, random string in production
JWT_SECRET=your_super_secure_jwt_secret_key_here_change_in_production

# JWT Configuration
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Password hashing rounds (10-12 recommended for production)
BCRYPT_ROUNDS=12

# =============================================================================
# SSL/TLS CONFIGURATION
# =============================================================================
# SSL Certificate paths (relative to project root)
SSL_KEY_PATH=cert/key.pem
SSL_CERT_PATH=cert/cert.pem

# SSL Configuration
SSL_ENABLED=true
SSL_REJECT_UNAUTHORIZED=true

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://localhost:3000

# CORS credentials
CORS_CREDENTIALS=true

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log level: error, warn, info, debug
LOG_LEVEL=info

# Log file paths
LOG_DIR=logs
LOG_FILE=app.log
ERROR_LOG_FILE=error.log

# Log rotation
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================
# Notification service settings
NOTIFICATION_ENABLED=true
NOTIFICATION_CHECK_INTERVAL=5

# Email configuration (for future email notifications)
EMAIL_ENABLED=false
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# =============================================================================
# RATE LIMITING
# =============================================================================
# Rate limiting configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# API rate limits
API_RATE_LIMIT_WINDOW=15
API_RATE_LIMIT_MAX=100

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
# Redis configuration (for future caching)
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Cache TTL (seconds)
CACHE_TTL=3600

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
# File upload settings
UPLOAD_ENABLED=false
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf
UPLOAD_DIR=uploads

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
# Application monitoring
MONITORING_ENABLED=false
HEALTH_CHECK_ENABLED=true

# Performance monitoring
PERFORMANCE_MONITORING=false

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================
# Development settings
DEV_ENABLE_CORS=true
DEV_ENABLE_LOGGING=true
DEV_ENABLE_ERROR_STACK=true

# Testing configuration
TEST_PORT=3001
TEST_DB_URI=mongodb://localhost:27017/RiseTaskDB_test
TEST_JWT_SECRET=test_jwt_secret_key

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================
# These settings are automatically applied in production
# NODE_ENV=production
# SSL_REJECT_UNAUTHORIZED=true
# DEV_ENABLE_ERROR_STACK=false
# LOG_LEVEL=warn

# =============================================================================
# OPTIONAL INTEGRATIONS
# =============================================================================
# Third-party service integrations
SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Analytics
GOOGLE_ANALYTICS_ID=
MIXPANEL_TOKEN=

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
# Database backup settings
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=backups

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Feature toggles
FEATURE_USER_AUTHENTICATION=false
FEATURE_TEAM_COLLABORATION=false
FEATURE_FILE_ATTACHMENTS=false
FEATURE_ADVANCED_ANALYTICS=false
FEATURE_API_VERSIONING=false